{
  "include": [
    "src/**/*.ts"
 ],
  "compilerOptions": {
    "incremental": true,
    "baseUrl": "./src",
    "target": "es2017",
    "module": "commonjs",
    "allowJs": true,
    "checkJs": true,
    "outDir": "./dist",
    "sourceMap": true,
    "strict": false,
    "noImplicitAny": false,
    "alwaysStrict": true,
    "strictNullChecks": false,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "noEmit": false,
    "isolatedModules": true,
    "typeRoots": [
      "./src/types",
      "./node_modules/@types"
    ]
  }
}